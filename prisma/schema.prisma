// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user_id     String       @default(cuid())
  email       String       @unique
  password    String
  restaurants Restaurant[]
}

model Restaurant {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  restauraunt_id String   @default(cuid())
  name           String   @unique
  address        String
  userId         Int?
  menus          Menu[]
  User           User?    @relation(fields: [userId], references: [id])
}

model Menu {
  id           Int         @id @default(autoincrement())
  menu_id      String      @default(cuid())
  name         String      @unique
  Restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId Int?
  menuItems    MenuItems[]
}

model MenuItems {
  id          Int     @id @default(autoincrement())
  item_id     String  @default(cuid())
  name        String  @unique
  course      String
  price       Decimal
  menuId      Int?
  integral    String
  removable   String
  vegan       Boolean
  vegetarian  Boolean
  pescatarian Boolean
  Menu        Menu?   @relation(fields: [menuId], references: [id])
}
